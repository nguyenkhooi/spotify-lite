{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "incremental": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "paths": {
      "*": ["src/*"],
      "assets": ["./src/common/assets"],
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
